<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bg"
    android:orientation="vertical" >

    <com.bionym.app.passwordvault.component.CustomTextView
        android:id="@+id/popupHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/lighter_navy"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:padding="10dp"
        android:text="@string/error_header"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_small" />

    <com.bionym.app.passwordvault.component.CustomTextView
        android:id="@+id/alert_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/starred_pwd_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/okayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_button"
            android:text="@string/okay"
            android:textColor="@drawable/textcolor_button"
            android:textSize="@dimen/text_size_micro" />
    </LinearLayout>

</LinearLayout>